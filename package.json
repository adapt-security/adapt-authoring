    "adapt-authoring-mongodb": "github:adapt-security/adapt-authoring-mongodb",
    "adapt-authoring-mongodblogger": "github:adapt-security/adapt-authoring-mongodblogger",
    "adapt-authoring-roles": "github:adapt-security/adapt-authoring-roles",
    "adapt-authoring-server": "github:adapt-security/adapt-authoring-server",
    "adapt-authoring-sessions": "github:adapt-security/adapt-authoring-sessions",
    "adapt-authoring-tags": "github:adapt-security/adapt-authoring-tags",
    "adapt-authoring-ui": "github:adapt-security/adapt-authoring-ui",
    "adapt-authoring-users": "github:adapt-security/adapt-authoring-users"
  },
  "devDependencies": {
    "adapt-authoring-docs": "github:adapt-security/adapt-authoring-docs",
    "adapt-authoring-testing": "github:adapt-security/adapt-authoring-testing",
    "at-utils": "github:adapt-security/at-utils",
    "eslint": "^9.20.1",
    "standard": "^17.1.0"
  },
