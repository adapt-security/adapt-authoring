{
  "name": "adapt-authoring",
  "version": "0.10.0",
  "description": "A server-based user interface for authoring eLearning courses using the Adapt Framework.",
  "homepage": "https://github.com/taylortom/adapt-authoring",
  "license": "GPL-3.0",
  "bin": {
    "adaptat": "./bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taylortom/adapt-authoring.git"
  },
  "scripts": {
    "debug": "DEBUG=true node --inspect-brk ./bin/cli.js start"
  },
  "adapt_authoring": {
    "documentation": {
      "enable": true,
      "includes": {
        "docs": "docs/*"
      }
    }
  },
  "framework": "4",
  "dependencies": {
    "adapt-authoring-api": "git+https://github.com/taylortom/adapt-authoring-api.git",
    "adapt-authoring-core": "git+https://github.com/taylortom/adapt-authoring-core.git",
    "adapt-authoring-courses": "git+https://github.com/taylortom/adapt-authoring-courses.git",
    "adapt-authoring-helloworld": "git+https://github.com/taylortom/adapt-authoring-helloworld.git",
    "adapt-authoring-logger": "git+https://github.com/taylortom/adapt-authoring-logger.git",
    "adapt-authoring-mongodb": "git+https://github.com/taylortom/adapt-authoring-mongodb.git",
    "adapt-authoring-prototypeui": "git+https://github.com/taylortom/adapt-authoring-prototypeui.git",
    "adapt-authoring-server": "git+https://github.com/taylortom/adapt-authoring-server.git",
    "adapt-authoring-theme": "git+https://github.com/taylortom/adapt-authoring-theme.git",
    "adapt-authoring-users": "git+https://github.com/taylortom/adapt-authoring-users.git"
  },
  "devDependencies": {
    "adapt-authoring-docs": "git+https://github.com/taylortom/adapt-authoring-docs.git"
  },
  "engines": {
    "node": "10.x"
  }
}
